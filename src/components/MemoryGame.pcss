.flexContainer {
    padding: 0;
    margin: 0;
    list-style: none;
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-flow: row;
    justify-content: space-around;
    line-height:30px;
    background: white;
    color: black;
}

.verticalFlex {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.flexItem {
    margin: 0;
    font-weight: bold;
    font-size: 1.5em;
    text-align: center;
    flex: 1 0 0px;
    min-width: 1.5em;
}

.flexContainer:nth-child(2n) .flexItem:nth-child(2n) {
  background-color: black;
  color: white;
}

.flexContainer:nth-child(2n+1) .flexItem:nth-child(2n+1) {
  	background-color: black;
  	color: white;
}


.flexItem:before {
    content: "";
	display: block;
	padding-top: 100%;
    float: left;
}
